---
import AppLayout from "@/layouts/AppLayout.astro";
import ContinueSection from "@/components/dashboard/ContinueSection.vue";
import UpcomingList from "@/components/dashboard/UpcomingList.vue";
import TrendingSection from "@/components/dashboard/TrendingSection.vue";

const { user } = Astro.locals;

if (!user) {
    return Astro.redirect("/login");
}
---

<AppLayout>
    <div class="container py-6">
        <header class="mb-6">
            <h1 class="text-3xl font-bold tracking-tight">Dashboard</h1>
        </header>

        <div class="space-y-10">
            <!-- Continue Watching Section -->
            <section>
                <ContinueSection client:load />
            </section>

            <!-- Upcoming Schedule -->
            <section>
                <UpcomingList client:visible />
            </section>

            <!-- Trending Section -->
            <section>
                <TrendingSection client:visible />
            </section>
        </div>
    </div>
</AppLayout>
