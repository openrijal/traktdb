---
import Layout from "../layouts/Layout.astro";
import VerticalPosterCarousel from "@/components/landing/VerticalPosterCarousel.vue";

if (Astro.locals.user) {
	return Astro.redirect("/dashboard");
}
---

<Layout>
	<div class="relative min-h-screen flex overflow-hidden">
		<!-- Left Side: Content -->
		<main
			class="flex-1 flex flex-col items-start justify-center p-12 z-10 relative"
		>
			<div class="max-w-xl">
				<div
					class="inline-block rounded-full bg-primary/10 px-3 py-1 text-sm text-primary mb-6 border border-primary/20 backdrop-blur-sm"
				>
					Now in Beta ðŸš€
				</div>
				<h1
					class="text-5xl md:text-7xl font-bold tracking-tight text-white mb-6 leading-tight"
				>
					Track your <span
						class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-purple-400"
						>Obsessions</span
					>
				</h1>
				<p class="text-lg text-muted-foreground mb-8 leading-relaxed">
					The ultimate privacy-focused media tracking database. Keep
					track of every movie and TV show you watch, automatically
					synchronized and beautifully organized.
				</p>
				<div class="flex gap-4">
					<a
						href="/login"
						class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8 shadow hover:scale-105"
					>
						Get Started
					</a>
					<a
						href="https://github.com/openrijal/traktdb"
						class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 border border-input bg-background/50 backdrop-blur-sm hover:bg-accent hover:text-accent-foreground h-11 px-8"
					>
						GitHub
					</a>
				</div>
			</div>
		</main>

		<!-- Right Side: Visuals -->
		<div
			class="hidden lg:flex flex-1 relative bg-gradient-to-br from-background via-background/50 to-primary/5 items-center justify-center gap-6 overflow-hidden"
		>
			<!-- Skewed Container for dynamic effect -->
			<div
				class="absolute inset-0 bg-grid-white/[0.02] bg-[size:50px_50px] [mask-image:radial-gradient(ellipse_at_center,white,transparent_75%)]"
			>
			</div>

			<div
				class="flex gap-6 h-[150vh] -rotate-12 translate-y-[-10%] opacity-80 scale-110"
			>
				<VerticalPosterCarousel
					speed="slow"
					direction="up"
					client:load
				/>
				<VerticalPosterCarousel
					speed="normal"
					direction="down"
					class="mt-20"
					client:load
				/>
				<VerticalPosterCarousel
					speed="slow"
					direction="up"
					client:load
				/>
			</div>

			<!-- Radial overlay to blend edges -->
			<div
				class="absolute inset-0 bg-gradient-to-r from-background via-transparent to-transparent z-10 pointer-events-none"
			>
			</div>
		</div>
	</div>
</Layout>
