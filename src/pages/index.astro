---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<main
		class="flex min-h-screen flex-col items-center justify-center gap-4 p-8"
	>
		<h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
			Trackt<span class="text-primary">DB</span>
		</h1>
		<p class="text-lg text-secondary">
			The ultimate media tracking database.
		</p>
		<div class="mt-8 flex gap-4">
			<a
				href="/login"
				class="rounded-full bg-primary px-6 py-2 font-medium text-white transition-colors hover:bg-blue-600"
			>
				Get Started
			</a>
			<a
				href="https://github.com/openrijal/traktdb"
				class="rounded-full border border-border bg-card px-6 py-2 font-medium text-white transition-colors hover:bg-zinc-800"
			>
				GitHub
			</a>
		</div>
	</main>
</Layout>
